    <div class="allmembers" >
        <% for( let member of memberData){ %>
              <div class="containerMember mb-4">
                <div class="postName">
                    <h5 class="postD"><%=member.post %></h5>
                </div>
                <div class="imgContainer">
                   <img src="<%=member.image %>" alt="" class="image">
                    <div class="description">
                        <h5 class="name"><%=member.name %></h5>
                        <ul class="details">
                            <li>Year : <%=member.year %></li>
                            <li>Branch : <%=member.branch %></li>
                            <li>E-Mail : <%= member.email.split('@')[0]+'@' %></li>
                            <li>Skills : <%=member.skills %></li>
                            <%if(currUser && currUser.username=='binaryclub'){%>
                                <li><form method="POST" action="/member/delete/<%=member._id%>?_method=DELETE">
                                    <button class="btn  memberDeleteButton ">X</button>
                                </form></li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        <% } %>
        <%if(currUser && currUser.username=='binaryclub'){%>
            <a href="/member/new">

                <div class="containerMember mb-2">
                    <div class="postName">
                        <h2></h2>
                    </div>
                    <div class="imgContainer">
